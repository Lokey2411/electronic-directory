CREATE TABLE Departments (
    DepartmentID INT PRIMARY KEY,
    DepartmentName VARCHAR(255),
    Address VARCHAR(255),
    Email VARCHAR(255),
    Phone VARCHAR(15),
    Logo VARCHAR(255),
    Website VARCHAR(255),
    ParentDepartmentID INT,
    FOREIGN KEY (ParentDepartmentID) REFERENCES Departments(DepartmentID)
);

